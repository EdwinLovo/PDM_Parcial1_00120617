<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/app_navigation"
            app:startDestination="@id/destination_all_games">

    <fragment
        android:id="@+id/destination_all_games"
        android:name="com.pdm.parcial1.Fragments.AllGamesFragment"
        android:label="All Games"
        tools:layout="@layout/fragment_all_games" >
        <action android:id="@+id/next_action"
                app:destination="@id/destination_game"/>
        <action
            android:id="@+id/next_action2"
            app:destination="@id/destination_live_game" />
    </fragment>
    <fragment
        android:id="@+id/destination_game"
        android:name="com.pdm.parcial1.Fragments.GameFragment"
        android:label="Game"
        tools:layout="@layout/fragment_game" >
        <argument
            android:name="localName"
            app:argType="string" />
        <argument
            android:name="visitorName"
            app:argType="string" />
        <argument
            android:name="localScore"
            app:argType="string" />
        <argument
            android:name="visitorScore"
            app:argType="string" />
        <argument
            android:name="date"
            app:argType="string" />
        <argument
            android:name="time"
            app:argType="string" />
        <argument
            android:name="winner"
            app:argType="string" />
        <argument
            android:name="state"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/destination_live_games"
        android:name="com.pdm.parcial1.Fragments.AllLiveGamesFragment"
        android:label="Live Games"
        tools:layout="@layout/fragment_all_live_games" >
        <action android:id="@+id/next_action"
                app:destination="@id/destination_game"/>
        <action
            android:id="@+id/next_action2"
            app:destination="@id/destination_live_game" />
    </fragment>
    <fragment
        android:id="@+id/destination_new_game"
        android:name="com.pdm.parcial1.Fragments.NewGameFragment"
        android:label="New Game"
        tools:layout="@layout/fragment_new_game" >
        <action
            android:id="@+id/next_action"
            app:destination="@id/destination_game" />
        <action android:id="@+id/next_action2"
                app:destination="@id/destination_live_game"/>
    </fragment>
    <fragment android:id="@+id/destination_live_game" android:name="com.pdm.parcial1.Fragments.LiveGameFragment"
              android:label="Live Game" tools:layout="@layout/fragment_live_game">
        <argument
            android:name="localName"
            app:argType="string" />
        <argument
            android:name="localScore"
            app:argType="string" />
        <argument
            android:name="visitorScore"
            app:argType="string" />
        <argument
            android:name="visitorName"
            app:argType="string" />
        <argument
            android:name="date"
            app:argType="string" />
        <argument
            android:name="time"
            app:argType="string" />
        <argument
            android:name="winner"
            app:argType="string" />
        <argument
            android:name="state"
            app:argType="string" />
    </fragment>
</navigation>